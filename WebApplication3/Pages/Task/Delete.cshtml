@page
@model TaskManagementApp.Pages.Task.Delete

@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>Task Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Task.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Task.Description</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Task.Status</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Task.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>