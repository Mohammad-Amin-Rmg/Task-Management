@page "{id:int}"
@using Entities.Enums
@model TaskManagementApp.Pages.Task.EditModel
<h1>Edit Task</h1>

<form method="post">
    <input type="hidden" asp-for="TaskVm.Id" />
    <div class="form-group">
        <label asp-for="TaskVm.Name" class="control-label"></label>
        <input asp-for="TaskVm.Name" class="form-control" />
        <span asp-validation-for="TaskVm.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskVm.Description" class="control-label"></label>
        <textarea asp-for="TaskVm.Description" class="form-control"></textarea>
        <span asp-validation-for="TaskVm.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskVm.Priority" class="control-label"></label>
        <select asp-for="TaskVm.Priority" class="form-control" asp-items="Model.Priority"></select>
        <span asp-validation-for="TaskVm.Priority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskVm.Status" class="control-label"></label>
        <select asp-for="TaskVm.Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control" required>
            <option value="">Select Task Status</option>
        </select>
        <span asp-validation-for="TaskVm.Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskVm.Deadline" class="control-label"></label>
        <textarea asp-for="TaskVm.Deadline" class="form-control"></textarea>
        <span asp-validation-for="TaskVm.Deadline" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Task/Show" class="btn btn-secondary">Cancel</a>
</form>
